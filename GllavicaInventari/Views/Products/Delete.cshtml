@model GllavicaInventari.Models.Product

@{
    ViewData["Title"] = "Fshij produktin";
}

<a class="btn btn-default btn-rounded waves-effect waves-light pull-right" asp-action="Index">
    <span class="btn-label"><i class="fa fa-backward"></i></span>
    Kthehu tek produktet
</a>
<h2>Fshirja e produktit: <span class="text-danger">@Model.Title</span> </h2>

<div class="visible-lg" style="height: 25px;"></div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card-box">
            <h2 class="text-center">Detajet e produktit</h2>
            <div class="visible-lg" style="height: 10px;"></div>

            <div class="text-center">
                <table class="table">

                    <tbody>
                        <tr>
                            <td><b>Emri</b></td>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <td><b>Përshkrimi</b></td>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <td><b>Njësia</b></td>
                            <td>@Model.Unit</td>
                        </tr>
                    </tbody>
                </table>

            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <p class="text-center">
                    <button asp-action="Index" class="confirm btn btn-lg btn-default" tabindex="1" style="display: inline-block;"> <i class="fa fa-arrow-left"></i> Kthehu </button>
                    <button type="submit" class="cancel btn btn-lg btn-danger" tabindex="2" style="display: inline-block;"> <i class="fa fa-trash"></i> Konfirmo </button>
                </p>
            </form>
            <div class="visible-lg" style="height: 10px;"></div>
        </div>

    </div> <!-- end col -->
</div>
