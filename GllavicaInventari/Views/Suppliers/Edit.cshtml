@model GllavicaInventari.Models.Supplier

@{
    ViewData["Title"] = "Edit";
}

<a class="btn btn-default btn-rounded waves-effect waves-light pull-right" asp-action="Index">
    <span class="btn-label"><i class="fa fa-backward"></i></span>
    Kthehu tek furnitorët
</a>
<h2>Ndrysho të dhënat e furnitorit</h2>

<div class="visible-lg" style="height: 25px;"></div>

<div class="row">
    <div class="col-md-8 col-md-offset-2 col-8">
        <div class="card-box">
            <form role="form" asp-action="Edit" id="supplierEditForm">
                <div class="form-group row">
                    <label class="col-4 col-form-label">Emri i furnitorit <span class="text-danger">*</span> </label>
                    <div class="col-7">
                        <input asp-for="Name" required class="form-control" placeholder="Psh. Gllavica Sh.p.k" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-4 col-form-label">Kontakt <span class="text-danger">*</span></label>
                    <div class="col-7">
                        <input asp-for="Contact" required class="form-control" placeholder="" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="hori-pass1" class="col-4 col-form-label">Adresa furnitorit</label>
                    <div class="col-7">
                        <input asp-for="Address" class="form-control" placeholder="" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="pershkrimi" class="col-4 col-form-label">Pershkrimi furnitorit</label>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2">
                        <button type="submit" class="btn btn-primary waves-effect waves-light btn pull-right"> Ruaj ndryshimet </button>
                    </div>
                </div>
            </form>
            <div class="visible-lg" style="height: 10px;"></div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
