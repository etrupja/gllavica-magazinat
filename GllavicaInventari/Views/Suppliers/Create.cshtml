@model GllavicaInventari.Models.Supplier

@{
    ViewData["Title"] = "Krijo furnitor";
}

<a class="btn btn-default btn-rounded waves-effect waves-light pull-right" asp-action="Index">
    <span class="btn-label"><i class="fa fa-backward"></i></span>
    Kthehu tek furnitorët
</a>
<h2>Krijo furnitor të ri</h2>

<div class="visible-lg" style="height: 25px;"></div>

<div class="row">
    <div class="col-md-8 col-md-offset-2 col-8">
        <div class="card-box">
            <form role="form" asp-action="Create" id="supplierCreateForm">
                <div class="form-group row">
                    <label class="col-4 col-form-label">Emri i furnitorit <span class="text-danger">*</span></label>
                    <div class="col-7">
                        <input asp-for="Name" required data-bv-notempty-message="Emri furnitorit nuk mund te lihet bosh!" class="form-control" placeholder="Psh. Gllavica Sh.p.k" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-4 col-form-label"> Kontakt <span class="text-danger">*</span></label>
                    <div class="col-7">
                        <input asp-for="Contact" required data-bv-notempty-message="Kontakti nuk mund te lihet bosh!" class="form-control" placeholder="" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="hori-pass1" class="col-4 col-form-label">Adresa furnitorit</label>
                    <div class="col-7">
                        <input asp-for="Address" class="form-control" placeholder="Rruga Emri Rruges, Pallati x, Hyrja y" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="pershkrimi" class="col-4 col-form-label"> Pershkrimi furnitorit </label>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" placeholder="Nje pershkrimi i shkurter per furnitorin (opsional)" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2">
                        <button type="submit" class="btn btn-primary waves-effect waves-light btn pull-right"> Ruaj te dhënat </button>
                        <button type="reset" class="btn btn-secondary waves-effect m-l-5 btn"> Anullo </button>
                    </div>
                </div>
            </form>
            <div class="visible-lg" style="height: 10px;"></div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

