@model IEnumerable<GllavicaInventari.Models.Warehouse>

@{
    ViewData["Title"] = "Lista e magazinave";
}

<a class="btn btn-success btn-rounded waves-effect waves-light pull-right" asp-action="Create">
    <span class="btn-label"><i class="fa fa-plus"></i></span>
    Shto Magazinë
</a>
<h2>Të gjithë magazinat</h2>

<div class="row">
    <div class="col-12">
        <div class="card-box table-responsive">
            <h4 class="m-t-0 header-title">Lista e magazinave</h4>
            <p class="text-muted font-14 m-b-30">
                Kjo eshte lista e te gjithë magazinave që ju keni.
            </p>

            <table id="WarehousesTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Emri</th>
                        <th>Përshkrimi </th>
                        <th>Adresa</th>
                        <th>Magazinier</th>
                        <th class="text-center">Veprime</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-icon waves-effect waves-light btn-success">
                                <i class="fa fa-eye"></i> Detajet
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-icon waves-effect waves-light btn-default">
                                <i class="fa fa-edit"></i> Ndrysho
                            </a>
                            @if (item.Entries.Count == 0)
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-icon waves-effect waves-light btn-danger">
                                    <i class="fa fa-trash"></i> Fshij
                                </a>
                            }

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>